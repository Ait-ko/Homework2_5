<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/Trivia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="96dp"
        android:text="Trivia"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@id/Next"
        app:layout_constraintStart_toStartOf="@id/Next"
        app:layout_constraintBottom_toTopOf="@id/Next"

        app:layout_constraintTop_toBottomOf="parent" />

    <EditText
        android:id="@+id/enter"
        android:inputType="text"
        android:background="#A6A7D574"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:hint="UserName"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/enter1"
        android:inputType="text"
        android:background="#A6A7D574"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginTop="72dp"
        android:hint="Password"
        android:textColor="@color/white"
        android:minHeight="48dp"
        android:textSize="25sp"

        app:layout_constraintTop_toBottomOf="@id/enter"


        app:layout_constraintTop_toTopOf="@id/enter"
        tools:ignore="MissingConstraints"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:background="#A6A7D574"
        android:layout_margin="40dp"
        android:layout_marginTop="72dp"
        android:hint="Emil"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/enter1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/enter1"
        app:layout_constraintTop_toTopOf="@id/enter1"
        tools:ignore="MissingConstraints"/>






    <Button
        android:id="@+id/Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_margin="30dp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="16dp"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="385dp"/>
    <ImageView
        android:src="@drawable/kindpng_4814143"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="@id/Next"
        app:layout_constraintEnd_toEndOf="@id/Next"
        app:layout_constraintBottom_toTopOf="@id/Trivia"
        />







</androidx.constraintlayout.widget.ConstraintLayout>